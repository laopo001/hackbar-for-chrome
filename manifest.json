{
	"manifest_version": 2,
	"name": "hackbar for chrome",
	"version": "0.0.2",
	"background": { "scripts": ["jquery-2.0.0.min.js", "background.js"] },
	"devtools_page": "devtools.html",
	"page_action": {
		"default_icon": {
			"19": "cnblogs_19.png",
			"38": "cnblogs_38.png"
		},
		"default_title": "hackbar" ,
		"default_popup": "popup.html"
	},
	"permissions": [
		"cookies",
		"background",
		"webRequest",
		"tabs",
		"http://*/*",
		"https://*/*",
		"bookmarks"
	],
	"content_scripts":[{
		"matches":[
			"http://*/*",
			"https://*/*"
		],
		"js":["jquery-2.0.0.min.js", "content_script.js"]
	}]
}
